<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style for the header text in the activity_main.xml-->
    <style name="MainHeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/main_header_text_size</item>
        <item name="android:padding">@dimen/main_header_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/background_color</item>
    </style>


    <!--Styles for list item views on the home screen-->
    <style name="CityImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/city_image_height</item>
    </style>

    <style name="TextItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_item_size</item>
        <item name="android:padding">@dimen/text_item_padding</item>
        <item name="android:drawablePadding">@dimen/text_item_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextItemMoreStyle" parent="TextItemStyle">
        <item name="android:textColor">@color/icon_text_more_color</item>
        <item name="android:textSize">@dimen/text_item_small_size</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">@dimen/text_item_drawable_padding</item>
    </style>

    <!--Styles for items in the city guides fragment-->
    <style name="CityGuideTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/city_guide_text_size</item>
        <item name="android:padding">@dimen/text_item_padding</item>
        <item name="android:drawablePadding">@dimen/text_item_drawable_padding</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="CityTimeTextStyle" parent="CityGuideTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/city_time_text_size</item>
        <item name="android:textColor">@color/icon_text_more_color</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CityAirportTextStyle" parent="CityGuideTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/city_airport_text_item_padding</item>
    </style>

    <style name="CityGuideImageStyle" parent="CityImageStyle">
        <item name="android:layout_height">@dimen/city_guide_image_height</item>
        <item name="android:layout_width">@dimen/city_guide_image_width</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="CityPlacesTextStyle" parent="CityGuideTextStyle">
        <item name="android:gravity">start|center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CityPlacesHeaderStyle" parent="CityGuideTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="WebsiteButtonStyle" parent="CityPlacesTextStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/icon_text_more_color</item>
    </style>

    <style name="RatingPriceIconStyle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
