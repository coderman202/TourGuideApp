<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp">

    <TextView
        style="@style/CityPlacesHeaderStyle"
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/placeholder_name"
        tools:layout_editor_absoluteX="110dp"/>


    <ImageView
        style="@style/CityImageStyle"
        android:id="@+id/event_image"
        android:layout_width="174dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toBottomOf="@+id/event_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/chila"
        tools:layout_editor_absoluteX="0dp"/>

    <TextView
        style="@style/CityPlacesTextStyle"
        android:id="@+id/event_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/event_name"
        app:layout_constraintStart_toEndOf="@id/event_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/placeholder_description"
        tools:layout_editor_absoluteX="174dp"/>

    <TextView
        style="@style/CityPlacesTextStyle"
        android:id="@+id/event_start_end"
        android:layout_width="368dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/event_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableEnd="@drawable/time_coloured"
        android:drawableStart="@drawable/date"
        tools:text="@string/placeholder_start_end_date_time"
        tools:layout_editor_absoluteX="8dp"/>

    <TextView
        style="@style/WebsiteButtonStyle"
        android:id="@+id/event_website"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_start_end"
        tools:text="@string/website"
        android:drawableEnd="@drawable/website"
        tools:layout_editor_absoluteX="151dp"/>

</android.support.constraint.ConstraintLayout>